<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glass">

    <TextView
        android:id="@+id/MODEL"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="设备型号:"/>

    <TextView
        android:id="@+id/model"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/MODEL"
        />
    <TextView
        android:id="@+id/MAKE"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/MODEL"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="设备制造商:"/>

    <TextView
        android:id="@+id/make"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/model"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/MAKE"
        />
    <TextView
        android:id="@+id/DATE"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/MAKE"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="拍摄时间:"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/make"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/DATE"
        />
    <TextView
        android:id="@+id/SIZE"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/DATE"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="尺寸:"/>

    <TextView
        android:id="@+id/size"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/date"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/SIZE"
        />
    <TextView
        android:id="@+id/LOCAL"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/SIZE"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="地理位置:"/>

    <TextView
        android:id="@+id/local"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/size"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/LOCAL"
        />
    <Button
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_below="@id/LOCAL"
        android:layout_marginLeft="100dp"
        android:onClick="startmap"
        android:text="查看位置"/>

</RelativeLayout>